<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/cooldark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Yorozuya"
        android:textSize="13pt"
        android:layout_marginTop="8pt"
        android:layout_gravity="top|center_horizontal"
        android:fontFamily="@font/akira"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feel the experience yourself"
        android:fontFamily="@font/akira"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="2pt"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Montir Serba Bisa"
        android:textColor="@color/white"
        android:fontFamily="@font/coolvetica"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="8pt">
    </TextView>

    <ImageView
        android:layout_width="2.5in"
        android:layout_height="1.3in"
        android:layout_gravity="center"
        android:background="@drawable/montir"
        android:layout_marginTop="2pt">
    </ImageView>

    <Button
        android:id="@+id/button1"
        android:layout_width="2.3in"
        android:layout_gravity="center"
        android:layout_marginTop="1pt"
        android:layout_height="wrap_content"
        android:text="Pesan Jasa Orang Ini"
        android:fontFamily="@font/coolvetica"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"

        android:onClick="pesanMontir"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dukun Sakti Mandraguna"
        android:textColor="@color/white"
        android:fontFamily="@font/coolvetica"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="8pt">
    </TextView>

    <ImageView
        android:layout_width="2.5in"
        android:layout_height="1.3in"
        android:layout_gravity="center"
        android:background="@drawable/jawirseram"
        android:layout_marginTop="2pt">
    </ImageView>

    <Button
        android:id="@+id/button2"
        android:layout_width="2.3in"
        android:layout_gravity="center"
        android:layout_marginTop="1pt"
        android:layout_height="wrap_content"
        android:text="Pesan Jasa Orang Ini"
        android:textColor="@color/white"
        android:fontFamily="@font/coolvetica"
        android:backgroundTint="@color/darkgray"
        android:onClick="pesanDukun"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bodyguard Hitam Kekar"
        android:textColor="@color/white"
        android:fontFamily="@font/coolvetica"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="8pt">
    </TextView>

    <ImageView
        android:layout_width="2.5in"
        android:layout_height="1.3in"
        android:layout_gravity="center"
        android:background="@drawable/nigga"
        android:layout_marginTop="2pt">
    </ImageView>

    <Button
        android:id="@+id/button3"
        android:layout_width="2.3in"
        android:layout_gravity="center"
        android:layout_marginTop="1pt"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Pesan Jasa Orang Ini"
        android:fontFamily="@font/coolvetica"
        android:backgroundTint="@color/darkgray"
        android:onClick="pesanBodyguard"/>
    </LinearLayout>
</ScrollView>